{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~*": ["src/*"],
      "~assets/*": ["assets/*"],                                      
      "~navigation/*": ["src/navigation/*"],
      "~components/*": ["src/components/*"],
      "~screens/*": ["src/screens/*"],
      "~locals/*": ["src/locals/*"],
      "~utils/*": ["src/utils/*"],
      "~services/*": ["src/services/*"],
      "~helpers/*": ["src/helpers/*"],
      "~store/*": ["src/store/*"],
      "~types/*": ["src/types/*"],
      "~theme/*": ["src/theme/*"],
    }
  }
}
